<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Wedding Site Builder</title>
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:wght@400;700&display=swap" rel="stylesheet">
<style>
    body { font-family: 'Lato', sans-serif; background: #eef2f3; margin: 0; display: flex; height: 100vh; overflow: hidden; }
    
    /* --- SIDEBAR --- */
    .sidebar {
        width: 280px; background: #2c3e50; color: white; padding: 20px;
        display: flex; flex-direction: column; gap: 15px;
        box-shadow: 2px 0 10px rgba(0,0,0,0.2); z-index: 10;
    }
    h3 { margin-top: 0; color: #ecf0f1; border-bottom: 1px solid #34495e; padding-bottom: 10px; }
    
    .section-title { font-size: 0.85em; text-transform: uppercase; color: #bdc3c7; margin-top: 10px; }

    .tool-btn {
        padding: 12px; background: #34495e; color: #ecf0f1; border: none;
        border-radius: 6px; cursor: pointer; text-align: left; transition: 0.2s;
        font-size: 0.95em; display: flex; align-items: center;
    }
    .tool-btn:hover { background: #1abc9c; color: white; transform: translateX(5px); }
    
    .special-btn { background: #e67e22; font-weight: bold; }
    .special-btn:hover { background: #d35400; }

    .save-btn { margin-top: auto; background: #27ae60; text-align: center; justify-content: center; font-weight: bold; font-size: 1.1em; }
    .save-btn:hover { background: #2ecc71; }

    /* --- WORKSPACE --- */
    .workspace { flex: 1; background: #bdc3c7; display: flex; justify-content: center; align-items: center; padding: 40px; }

    /* --- PHONE CANVAS --- */
    #canvas {
        width: 375px; height: 750px; background: white;
        box-shadow: 0 0 30px rgba(0,0,0,0.3); border-radius: 30px;
        overflow-y: auto; overflow-x: hidden; position: relative;
        border: 8px solid #333; /* Phone Bezel */
    }
    /* Hide scrollbar for cleaner look */
    #canvas::-webkit-scrollbar { width: 0; }

    /* --- EDITABLE BLOCKS --- */
    .block { position: relative; transition: 0.2s; }
    .block:hover { outline: 2px dashed #e67e22; cursor: pointer; }
    .block:focus { outline: 2px solid #3498db; }

    /* --- TYPOGRAPHY FOR PREVIEW --- */
    .hero-section { text-align: center; padding: 40px 20px; background: #f9f9f9; }
    .hero-title { font-family: 'Cinzel', serif; color: #2c3e50; font-size: 2em; margin: 10px 0; }
    .guest-badge { background: #f1c40f; color: #2c3e50; padding: 5px 10px; border-radius: 4px; font-weight: bold; font-size: 0.9em; display: inline-block; margin: 10px 0; }
    
</style>
</head>
<body>

    <div class="sidebar">
        <h3>üíç Invitation Builder</h3>
        
        <div class="section-title">Structure</div>
        <button class="tool-btn" onclick="addBlock('hero')">Header (Couple Names)</button>
        <button class="tool-btn" onclick="addBlock('text')">Text Paragraph</button>
        <button class="tool-btn" onclick="addBlock('details')">Date & Location</button>
        
        <div class="section-title">Personalization</div>
        <button class="tool-btn special-btn" onclick="addBlock('guest')">‚ú® Add "Dear Guest"</button>

        <button class="tool-btn save-btn" onclick="saveDesign()">Save Design</button>
    </div>

    <div class="workspace">
        <div id="canvas">
            <div style="padding:20px; text-align:center; color:#999; margin-top:50%;">
                Add blocks from the left to start building...
            </div>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('canvas');

        function addBlock(type) {
            // Remove placeholder text if it's the first item
            if (canvas.innerText.includes('Add blocks from')) canvas.innerHTML = '';

            let el = document.createElement('div');
            el.className = 'block';
            el.contentEditable = "true"; // Magic attribute that makes text editable

            if (type === 'hero') {
                el.className += ' hero-section';
                el.innerHTML = `<h1 class="hero-title">Romeo & Juliet</h1><p>Are getting married</p>`;
            } 
            else if (type === 'text') {
                el.style.padding = "20px";
                el.innerHTML = `<p>We invite you to celebrate our joy together.</p>`;
            } 
            else if (type === 'details') {
                el.style.padding = "20px";
                el.style.background = "#ecf0f1";
                el.style.textAlign = "center";
                el.innerHTML = `<strong>Sunday, 20th Oct 2025</strong><br>The Grand Ballroom<br>New York City`;
            } 
            else if (type === 'guest') {
                el.style.padding = "20px";
                el.style.textAlign = "center";
                // This {{GUEST_NAME}} is what the server will look for!
                el.innerHTML = `<div>Dear <span class="guest-badge">{{GUEST_NAME}}</span></div><p>You are invited!</p>`;
            }

            canvas.appendChild(el);
        }

        function saveDesign() {
            const html = canvas.innerHTML;
            
            fetch('/save-design', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ htmlContent: html })
            })
            .then(res => res.json())
            .then(data => {
                alert('Design Saved! Try opening localhost:3000/share?to=YourName');
            });
        }
    </script>
</body>
</html>